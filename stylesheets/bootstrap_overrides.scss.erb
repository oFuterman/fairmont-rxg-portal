:root {
  --bs-success: #02D27A !important;
  --bs-secondary: #4E5D6A !important;
  --bs-warning: #F6803D !important;
  --bs-danger: #E73757 !important;
  --bs-primary: #2C7BE5 !important;
  --bs-info: #2ABBFD !important;
  --bs-light: #F8F8F8 !important;
  --bs-dark: #393939 !important;
  --bs-success-rgb: 2,210,122 !important;
  --bs-secondary-rgb: 78,93,106 !important;
  --bs-warning-rgb: 246,128,61 !important;
  --bs-danger-rgb: 231,55,87 !important;
  --bs-primary-rgb: 44,123,229 !important;
  --bs-info-rgb: 42,187,253 !important;
  --bs-light-rgb: 248,248,248 !important;
  --bs-dark-rgb: 57,57,57 !important;
}

/* Custom root variables */
:root {
  --bg-gradient-center: rgba(0,0,0,1);
  --bg-gradient-mid: rgba(25,30,56,1);
  --bg-gradient-outer: rgba(10,10,12,1);
  --bg-side-menu-left: rgba(66,123,222,0.5);
  --bg-side-menu-right: rgba(66,123,222,0);
  --color-nav-link: ;
}

body.bg-dark {
  --bg-card: #4E5D6A80;
}
body.bg-light {
  --bg-card: #FFF;
}

body.bg-dark {
  background: radial-gradient(circle, var(--bg-gradient-center) 0%, var(--bg-gradient-mid) 35%, var(--bg-gradient-outer) 72%), rgba(var(--bs-dark-rgb)) !important;
  background-attachment: fixed !important;
}

body.bg-dark .side-menu {
  background: rgb(66,123,222);
  background: linear-gradient(90deg, var(--bg-side-menu-left) 0%, var(--bg-side-menu-right) 100%);
  filter: drop-shadow(0.35rem 0.35rem 0.4rem rgba(0, 0, 0, 0.5));
}

.side-menu .nav-link,
.offcanvas .nav-link {
  font-size: 1.5rem;
  font-weight: bolder;
  transition: 0.2s;
}

body.bg-dark .side-menu .nav-link,
body.bg-dark .offcanvas .nav-link {
  color: var(--bs-light) !important;
}

body.bg-dark .side-menu .nav-link.active,
body.bg-dark .offcanvas .nav-link.active {
  color: var(--bs-gray-500) !important;
}

body.bg-light .side-menu .nav-link,
body.bg-light .offcanvas .nav-link {
  color: var(--bs-primary) !important;
}

body.bg-light .side-menu .nav-link.active,
body.bg-light .offcanvas .nav-link.active {
  color: var(--bs-secondary) !important;
}

body.bg-dark .side-menu .nav-link:not(.active):hover,
body.bg-dark .offcanvas .nav-link:not(.active):hover,
body.bg-light .side-menu .nav-link:not(.active):hover,
body.bg-light .offcanvas .nav-link:not(.active):hover {
  color: var(--bs-secondary) !important;
  /*opacity: 0.5;*/
  text-shadow: 1px 1px #000000CC;
}

/* Component Overrides */

.card {
  background: var(--bg-card) !important;
  background-filter: blur(30px);
}

select.text-light,
.card-subtitle.text-muted,
.form-control::placeholder {
  color: var(--bs-gray-500) !important;
}
.form-select {
  background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='white' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e") !important;

}

.alert span {
  display: block;
  margin: auto;
  text-align: center;
}

.progress {
  background-color: #e9ecef15;

  .progress-bar {
    overflow: visible;
  }
}

