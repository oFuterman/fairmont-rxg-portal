/* DATATABLES OVERRIDES */

table.dataTable>tbody>tr.child ul.dtr-details {
  width: 100% !important;
}

.cards tbody tr {
  float: left;
  width: 20rem;
  margin: 0.5rem;
  border: 0.0625rem solid rgba(0,0,0,.125);
  border-radius: .25rem;

}

.cards tbody td,
.cards tbody th {
  display: block;
}

.table tbody label {
  display: none;
}

.cards tbody label {
  display: inline;
  font-size: 85%;
  float: left;
  color: #808080;
  min-width: 4rem;
  margin-left: 0;
  margin-right: 1rem;
  text-align: left;
  vertical-align: middle;
}

.cards tbody .device-icon i {
  font-size: 10rem !important;
}

/* END DATATABLES OVERRIDES */
