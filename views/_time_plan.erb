<% visible = time_plan.id == subscription.time_plan_id %>
<div class="time_plan plan_addon" style="<%= 'display: none' unless visible %>" id="<%= "time_plan_#{usage_plan.id}_#{time_plan.id}" %>">

  <div class="row">
    <div class="col-6 center-align">
      <div class="addon_description"><%= time_plan.description.to_s.html_safe %></div>
    </div>
    <div class="col-6 right-align">
      <span class="price_display" data-price="<%= time_plan.price %>"><%= time_plan.price_display(currency_unit: subscription.currency_unit) %></span>
    </div>
  </div>

</div>
