<%= card_body do %>
  <hgroup class="mb-5">
    <%= card_title(class: "h3 text-center") do %>
      <%= _('Forgot your password?') %>
    <% end # card_title %>
    <%= card_subtitle(class: 'h5 text-center text-muted') do %>
      <%= _("Enter your login and we'll send you a link.") %>
    <% end # card_subtitle %>
  </hgroup>
  <%= bootstrap_form_tag(url: {action: :forgot_password_challenge}, id: 'forgot_password') do |f| %>
    <fieldset>
      <legend class="visually-hidden"><%= _('What is your login?') %></legend>
      <%= f.text_field(:login, value: params[:login], label: _('Login'), label_as_placeholder: true, class: portal_form_input_classes) %>
      <%= f.submit(_('Send reset link'), class: 'd-block w-100 mx-auto btn-lg btn-primary', data: { disable_with: _('Please wait...') }) %>
    </fieldset>
  <% end # bootstrap_form_tag %>
<% end # card_body %>
