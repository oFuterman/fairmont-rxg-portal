<div class='col-12 col-md-6 col-xl-4 p-md-2'>
  <div class="card shadow my-3 my-md-4 col-12 mx-auto session-info">
    <div class="col-12">
      <div class="row">
        <div class="card shadow summary col-12" style="background-color: #0e97ed; margin-top: -20px;">
          <%= link_to( {action: :account_info} ) do %>
            <%= portal_inline_svg 'profile_icon.svg', class: 'mx-auto d-block recolor-svg w-50 my-3' %>
          <% end %>
        </div>
        <div class="col-12">
          <p class="rg-branding-primary mt-3"><b><%= _('Profile') %></b></p>
          <p style="color: #bbb">
            <%= _('Hello, %{name}') % { name: @current_account_or_token.first_name } %>
          </p>
        </div>
      </div>
      <div class="col-12 d-none">
        <p class="text-center">
          <strong><%= _('Login:') %></strong>
          <span><%= @current_account_or_token.login %></span>
        </p>
        <p class="text-center">
          <strong><%= _('Name:') %></strong>
          <span><%= @current_account_or_token.full_name %></span>
        </p>
        <% unless @current_account_or_token.full_address.empty? %>
          <p class="text-center">
            <strong><%= _('Address:') %></strong>
            <span><%= @current_account_or_token.full_address %></span>
          </p>
        <% end %>
        <% if @account.secret_answers.empty? %>
          <p class="text-center">
            <%= _('<strong>Warning:</strong> Your account does not have a password recovery question/answer defined.').html_safe %>
          </p>
        <% end %>
      </div>
      <div class="col-12">
        <%= link_to _('Manage Profile'), {action: :account_info}, {class: 'd-block mx-auto col-6 text-center visually-hidden', data: { disable_with: _('Please wait...') } } %>
      </div>
      <hr class="col-9 mx-auto">
      <p class="card-info">
        <%= _('You logged in on %{time}.') % { time: l(@login_session.created_at) } %>
      </p>
    </div>
  </div>
</div>
