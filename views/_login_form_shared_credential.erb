<%
  title ||= _('Access Code')
  hide_title ||= false
%>
<%= bootstrap_form_tag(url: {action: :shared_credential_login}, id: 'shared_credential_login') do |f| %>
  <fieldset class="d-flex flex-column h-100">
    <legend class="<%= 'visually-hidden' if hide_title %>"><%= title %></legend>
    <%= f.password_field(:credential, {label: _('Enter Code'), label_as_placeholder: true, class: portal_form_input_classes, title: _('code')}) %>
    <%= render_portal_partial('terms_checkbox', locals: { f: f }) %>
    <%= f.submit(_('Sign In'), class: "mt-auto #{portal_login_submit_classes}", data: { disable_with: _('Please wait...') }) %>
  </fieldset>
<% end %>
