<%
  gauge ||= { title: '', stats: '', data: {}, bytes: false }
  pie_colors = I18n.t(:pie_colors)
  color = "#{pie_colors.present? && pie_colors.to_s !~ /translation missing/i ? pie_colors.split(',').first : '#2C7BE5'}"
%>
<div class="col" style="pointer-events: none;">
  <%= card(class: portal_card_classes) do %>
    <%= card_body do %>
      <div class="row justify-content-center">
        <div class="col-6 col-sm-12 col-md-6 col-lg-12 col-xxl-6">
          <hgroup>
            <h5 class="text-nowrap"><%= gauge[:title] %></h5>
            <small class="text-nowrap"><%= gauge[:stats] %></small>
          </hgroup>
        </div>
        <div class="col-6 col-sm-12 col-md-6 col-lg-12 col-xxl-6" style="height: 130px !important">
          <%= pie_chart(gauge[:data], legend: false, donut: true, height: '100%', colors: ["#{color}", '#666666'], bytes: gauge[:bytes], library: {rotation: 180,cutout: '75%', elements: {arc: {borderWidth: 0}}})%>
        </div>
      </div>
    <% end # card-body %>
  <% end  # card %>
</div>
