<%
  title ||= 'Error Title'
  body ||= ''
%>
<%= modal(id: 'error-modal', scrollable: true, size: :lg, aria_labelled_by: 'error-title', content: { class: ["#{'bg-dark' if @dark_mode}"] }) do %>
  <%= modal_header(close: @dark_mode ? 'light' : true) do %>
    <%= modal_title(id: 'error-title') do %>
      <%= title %>
    <% end # modal_title %>
  <% end #modal_header %>
  <%= modal_body(id: 'error-body') do %>
    <%= body %>
  <% end #modal_body %>
  <%= modal_footer %>
<% end # modal %>
