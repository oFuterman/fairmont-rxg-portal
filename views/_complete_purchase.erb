<%= card_body do %>
  <%= card_title do %>
    <%= _('Complete your purchase') %>
  <% end # card_title %>
  <%= card_text do %>
    <%= _('In order to complete your purchase, you need to authorize it with your card issuer.') %>
  <% end # card_text %>
